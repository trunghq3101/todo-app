<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.EditorDialog">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
    
    <style name="AppTheme.EditorScreen">
        <item name="editTextBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/colorTextOnSecondary</item>
    </style>

    <style name="AppTheme.ItemView">
        <item name="android:textColor">@color/colorTextOnSecondary</item>
        <item name="android:textSize">@dimen/list_item_text</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TextHinterStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TextLargeStyle">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ItemContainerStyle">
        <item name="android:background">@drawable/bg_item_view</item>
        <item name="android:padding">@dimen/list_item_spacing</item>
    </style>

</resources>
